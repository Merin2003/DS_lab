 #include<stdio.h>
 int main()
 {
 int arr[20],flag=0,i,n,find;
 printf("enter the number of elements");
 scanf("%d",&n);
 printf("enter the elements");
 for(i=0;i<n;i++)
 {
 scanf("%d",&arr[i]);
 }
 printf("enter the element to be searched");
 scanf("%d",&find);
 for(i=0;i<n;i++)
 {
 if(arr[i]==find)
 {
 flag=1;
 break;
 }
 }
 if(flag==1)
 {
 printf("element is found at index %d\n",i);
 }
 else
 {
 printf("element not found\n");
 }
 return 0;
 }
